<% flat = data.flats[owner] %>


<div style="background-image: url(https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>)" class="city-image">
</div>
<div class="content-container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="flat-header">
        <div class="flat-owner">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "avatar img-circle" %>
          <p><%= owner %></p>
        </div>
        <div class="flat-info">
          <h3><%= flat.description %></h3>
          <p> <%= flat.city_name %></p>
          <p> <%= '<i class="fas fa-star" style="color: #ffb400"></i> ' * flat.rating %></p>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <form class="text-center">
        <h3>Book this flat</h3>
        <div class="row">
          <div class="col-xs-6">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="checkin">
            </div>
          </div>
          <div class="col-xs-6">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="checkout">
            </div>
          </div>
          <div class="col-xs-12">
            <div class="form-group">
              <select class="form-control">
                <option>1 guest</option>
                <option>2 guests</option>
                <option>3 guests</option>
              </select>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Book it</button>
      </form>
    </div>
  </div>
</div>

