<div id="team" class="container">
  <div class="team-content text-center">
    <h2><i class="fas fa-sun"></i> Today's team <i class="fas fa-sun"></i></h2>
    <ul class="list-inline text-center">
      <% data.team.each do |user| %>
      <li>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{user.github_nickname}", class: "img-circle" %>
        <h3><%= user.name %></h3>
        <p><a href="https://github.com/<%= user.github_nickname %>"><i class="fab fa-github"></i><%= user.github_nickname %></p></a>
      </li>
      <% end %>
    </ul>
  </div>
</div>
